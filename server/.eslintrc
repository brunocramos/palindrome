{
  "extends": "airbnb/base",
  "env": {
    "es6": true,
    "node": true,
    "mongo": true
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "max-len": ["error", 120],
    "import/no-unresolved": [2, { "commonjs": true, "amd": true }],
    "no-underscore-dangle": ["off"],
    "no-param-reassign": 0,
    "no-console": 0,
    "prefer-promise-reject-errors": 0
  }
}
